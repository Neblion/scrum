{% form_theme form 'NeblionScrumBundle:Form:fields.html.twig' %}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>{{ 'Create a new task:'|trans }}</h3>
</div>

<div id="modal-body" class="modal-body">
        {% if success %}
            <div class="alert alert-success">
                <a class="close" data-dismiss="alert" href="#">×</a>
                <h4 class="alert-heading">{{ 'Success!'|trans }}</h4>
                {{ ''|trans }}
            </div>
        {% endif %}
    
        <form id="modal-form" action="{{ path('task_create', { 'id': story.id }) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {{ form_widget(form) }}
        </form>
</div>

<div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">{{ 'Close'|trans }}</a>
    <a id="modal-submit-form" href="" class="btn btn-primary">{{ 'Save changes'|trans }}</a>
</div>

{% if success %}
    <script type="text/javascript">
        $("#tasks-todo-{{ story.id }}").load("{{ path('task_todo', { 'id': story.id }) }}");
    </script>
{% endif %}
