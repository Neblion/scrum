{% extends 'NeblionScrumBundle:Layout:base.html.twig' %}

{% form_theme form 'NeblionScrumBundle:Form:fields.html.twig' %}

{% block body %}
<div class="page-header">
    <h1>{{ 'Task edition'|trans }}</h1>
</div>

<div class="row-fluid">
    <div class="span3">
        <p>Task infos....</p>
    </div><!--/span-->
    
    <div class="span9">
        <form action="{{ path('task_update', { 'id': task.id }) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-warning"><i class="icon-edit icon-white"></i> {{ 'Update'|trans }}</button>
                <a class="btn btn-primary" href="{{ path('sprint_show', {'id': task.story.sprint.id }) }}"><i class="icon-repeat icon-white"></i> {{ 'Cancel'|trans }}</a>
            </div>
        </form>
    </div><!--/span-->
</div><!--/row-->

{% endblock body %}
