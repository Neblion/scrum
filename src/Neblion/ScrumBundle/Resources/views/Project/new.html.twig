{% extends '::base.html.twig' %}

{% form_theme form 'NeblionScrumBundle:Form:fields.html.twig' %}

{% block body %}
<div class="page-header">
    <h1>{{ 'Project creation'|trans }}</h1>
</div>

<div class="row-fluid">
    <div class="span3">
    </div><!--/span-->
    
    <div class="span9">
        <form action="{{ path('project_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-success"><i class="icon-plus icon-white"></i> {{ 'Create'|trans }}</button>
                <a class="btn btn-primary" href="{{ path('project_list') }}"><i class="icon-repeat icon-white"></i> {{ 'Cancel'|trans }}</a>
            </div>
            </form>

        </div><!--/span-->
</div><!--/row-->

{% endblock body %}
