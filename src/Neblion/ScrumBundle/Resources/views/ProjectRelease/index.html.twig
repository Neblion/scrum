{% extends 'NeblionScrumBundle:Layout:base.html.twig' %}

{% block body %}
{% include 'NeblionScrumBundle:Layout:breadcrumb.html.twig' with {'pathes': pathes} %}

<div class="page-header">
    <h1>{{ 'Releases list:'|trans }}</h1>
</div>

<div class="row-fluid">
    <div class="span3">
        {% include 'NeblionScrumBundle:Project:menu.html.twig' with {'project': project} %}
    </div><!--/span-->
    
    <div class="span9">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'Status'|trans }}</th>
                    <th>{{ 'Start > End'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for release in releases %}
                    <tr>
                        <td><a href="#" rel="popover" data-content="{{ release.description }}" data-original-title="{{ 'Description'|trans }}">{{ release.name }}</a></td>
                        <td>{{ release.status.name|trans }}</td>
                        <td>{% if release.start %}{{ release.start|date('Y-m-d') }}{% endif %} > {% if release.end %}{{ release.end|date('Y-m-d') }}{% endif %}</td>
                        <td>
                            <a class="btn btn-mini btn-primary" href="{{ path('release_edit', { 'id': release.id }) }}"><i class="icon-edit icon-white"></i> {{ 'Edit'|trans }}</a>
                            <a class="btn btn-mini btn-danger" href="{{ path('release_delete', { 'id': release.id }) }}"><i class="icon-trash icon-white"></i> {{ 'Delete'|trans }}</a>
                        </td>
                    </tr>
                {% else  %}
                    <tr><td colspan="4">{{ 'No release'|trans }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
            
        <p><a class="btn btn-primary" href="{{ path('release_new', { 'id': project.id }) }}"><i class="icon-plus icon-white"></i> {{ 'New release'|trans }}</a></p>
    </div><!--/span-->
</div><!--/row-->

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $("a[rel=popover]").popover();
    </script>
{% endblock javascripts %}

