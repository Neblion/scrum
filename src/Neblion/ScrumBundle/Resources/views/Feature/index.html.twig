{% extends 'NeblionScrumBundle:Layout:base.html.twig' %}

{% block body %}
    <div class="row">
        {% include 'NeblionScrumBundle:Layout:navtabs.html.twig' with { 'project': project, 'active': 'admin'} %}
            
        {% include 'NeblionScrumBundle:Layout:navbar-admin.html.twig' with { 'project': project, 'active': 'features'} %} 
    </div><!--/row-->

<div class="row">
    <div class="span3">
        <p>Help...</p>
    </div><!--/span-->
    
    <div class="span9">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for feature in features %}
                    <tr>
                        <td>
                            <a href="#" rel="popover" data-content="{{ feature.description }}" data-original-title="{{ 'Description'|trans }}">{{ feature.name }}</a> 
                            <div style="float: right; border: 1px solid black; background-color: {{ feature.color }}; width: 50px; height: 18px;"></div>
                        </td>
                        <td>
                            <a class="btn btn-mini btn-primary" href="{{ path('feature_edit', { 'id': feature.id }) }}"><i class="icon-edit icon-white"></i> {{ 'Edit'|trans }}</a>
                            <a class="btn btn-mini btn-danger" href="{{ path('feature_delete', { 'id': feature.id }) }}"><i class="icon-trash icon-white"></i> {{ 'Delete'|trans }}</a>
                        </td>
                    </tr>
                {% else  %}
                    <tr><td colspan="2">{{ 'No feature'|trans }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
            
        {# display navigation #}
        <div class="navigation">
            {# pagination.render()|raw #}
        </div>
            
        <p><a class="btn btn-success" href="{{ path('feature_new', { 'id': project.id }) }}"><i class="icon-plus icon-white"></i> {{ 'New feature'|trans }}</a></p>
    </div><!--/span-->
</div><!--/row-->

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $("a[rel=popover]").popover();
    </script>
{% endblock javascripts %}


