<li id="{{ story.id }}" value="{{ story.estimate }}" class="sortable-story row well well-small">
    <div class="span1" rel="popover" data-placement="top" data-content="{{ story.feature.description }}" data-original-title="{{ 'Feature'|trans }}: {{ story.feature.name }}" style="background-color: {{ story.feature.color }};"></div>
    <div class="span9">
        <a href="#" rel="popover" data-content="{{ story.description }}" data-original-title="{{ 'Description'|trans }}">{{ story.name }}</a>
    </div>
    <div class="span2">
        <!--<div style="float:right; width: 25px; height: 25px; background-color: {# story.feature.color #};"></div>-->
        <a href="{{ path('story_edit', { 'id': story.id }) }}"><i class="icon-edit"></i></a>
        <a href="{{ path('story_delete', { 'id': story.id }) }}"><i class="icon-trash"></i></a>
        <a href="{{ path('story_estimate', { 'id': story.id }) }}" id="story-estimate-{{ story.id }}" class="story-estimate">{{ story.estimate }}</a>
    </div>
</li>