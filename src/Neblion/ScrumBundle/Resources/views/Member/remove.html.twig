{% extends 'NeblionScrumBundle:Layout:base.html.twig' %}

{% form_theme form 'NeblionScrumBundle:Form:fields.html.twig' %}

{% block body %}
{% include 'NeblionScrumBundle:Layout:breadcrumb.html.twig' with {'pathes': pathes} %}

<div class="page-header">
    <h1>{{ 'Member remove:'|trans }}</h1>
</div>

<div class="row-fluid">
    <div class="span3">
        {% include 'NeblionScrumBundle:Project:menu.html.twig' with {'project': project} %}
    </div><!--/span-->
    
    <div class="span9">
        <div class="alert alert-warning">
            {% if member.account.profile is not null %}
                <p>{{ 'Do you really want to remove this member'|trans }}: {{ member.account.profile.firstname }} {{ member.account.profile.lastname }} ({{ member.account.username }} / {{ member.role.name }}) ?</p>
            {% else %}
                <p>{{ 'Do you really want to remove this member'|trans }}: {{ member.account.username }} ?</p>
            {% endif %}
        </div>
        
        <form action="{{ path('member_remove', { 'id': member.id }) }}" method="post">
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-danger"><i class="icon-trash icon-white"></i> {{ 'Remove'|trans }}</button>
                <a class="btn btn-primary" href="{{ path('team_show', {'id': project.id}) }}"><i class="icon-repeat icon-white"></i> {{ 'No'|trans }}</a>
            </div>
        </form>
    </div><!--/span-->
</div><!--/row-->

{% endblock body %}



